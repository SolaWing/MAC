# vim:set noet sw=4 sts=4 ts=8:
[user]
	email = 316786359@qq.com
	name = solawing
[diff]
	tool = nvim
	guitool = mvim
[difftool "mvim"]
	cmd = . ~/bin/mvimdiff.sh
[difftool "nvim"]
	cmd = . ~/bin/nvimdiff.sh
[difftool]
	prompt = false
	trustExitCode = true
[alias]
	b = blame
	c = config
	d = diff
	f = fetch
	m = merge
	mf = merge fetch_head
	p = push
	r = remote
	br = branch
	s = status
        la = log --simplify-merges
	stat-commit = shortlog --no-merges
	stat-line = !sh ~/bin/git-stat-line.sh
	# byte dance
	rv = "!f() { git push origin HEAD:refs/for/${1:-master}%${2}; }; f"
[push]
	default = simple
[merge]
	tool = custom
	guitool = custom
[mergetool]
	prompt = false
[mergetool "custom"]
	cmd = bash ~/bin/mergetool.sh "$LOCAL" "$BASE" "$REMOTE" "$MERGED"
[rebase]
	autoStash = true
[core]
	quotepath = false
[grep]
	patternType = perl
[rerere]
	enabled = false
